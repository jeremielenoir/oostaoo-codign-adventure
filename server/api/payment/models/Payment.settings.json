{
  "connection": "default",
  "collectionName": "payments",
  "info": {
    "name": "payment",
    "description": "list payments, create payment"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "Amount": {
      "default": "",
      "type": "decimal"
    },
    "offer_id": {
      "model": "offer",
      "via": "payment_id"
    },
    "user_id": {
      "model": "user",
      "via": "payment_id",
      "plugin": "users-permissions"
    },
    "date_payment": {
      "default": "",
      "type": "integer"
    }
  }
}