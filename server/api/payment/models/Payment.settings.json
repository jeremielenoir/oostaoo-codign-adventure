{
  "connection": "default",
  "collectionName": "payments",
  "info": {
    "name": "payment",
    "description": "list payments, create payment"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "amount": {
      "default": "",
      "type": "decimal"
    },
    "user": {
      "model": "user",
      "via": "payments",
      "plugin": "users-permissions"
    },
    "offer": {
      "model": "offer",
      "via": "payments"
    },
    "customeraccount": {
      "model": "customeraccount",
      "via": "payments"
    },
    "paied_at": {
      "default": "",
      "type": "date",
      "required": true
    },
    "stripe_customer_id": {
      "default": "",
      "type": "string",
      "required": true
    },
    "stripe_subscription_id": {
      "default": "",
      "type": "string"
    },
    "stripe_charge_id": {
      "default": "",
      "type": "string"
    },
    "stripe_token_id": {
      "default": "",
      "type": "string",
      "required": true
    }
  }
}
